{% block extra_body %}
<script>
		$(document).ready(function(){

		    $('#myTable').dataTable();
		    $(".responsive-calendar").responsiveCalendar({
				onDayClick: function(events) {
					var key = $(this).data('year')+'-'+addLeadingZero( $(this).data('month') )+'-'+addLeadingZero( $(this).data('day') );
				}
			});

		    function addLeadingZero(num) {
				if (num < 10) {
				  return "0" + num;
				} else {
				  return "" + num;
				}
			}
		});
</script>
